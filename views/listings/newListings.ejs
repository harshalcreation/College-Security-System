
<body>
	<% layout("layouts/boilerplate.ejs") %>
	<!-- <h3>Create new listings:</h3> -->
	<div id="loader">
		<span class="blinker">A</span>
        <span class="blinker">I</span>
        <span class="blinker">D</span>
        <span class="blinker">S</span>
	  </div>
	<div class="row">
		<div class="col-8 offset-2">
			<form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
				<div class="mb-3">
					<label for="title" class="form-label">Name: <span class="text-danger">*</span></label>
					<input type="text" name="listing[title]" id="title" placeholder="Name of person" class="form-control" required>
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide a title.
					</div>
				</div>
                <div class="mb-3">
					<label for="title" class="form-label">ERP NUMBER(If have/Otherwise NA): <span class="text-danger">*</span></label>
					<input type="text" name="listing[height]" id="title" placeholder="ERP ID" class="form-control" required>
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide a title.
					</div>
				</div>
                
			
				<div class="mb-3">
					<!-- <label for="title" class="form-label">Weight: <span class="text-danger">*</span></label> -->
					<input type="hidden" name="listing[weight]" id="title" value="56">
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide a valid weight.
					</div>
				</div>
				<div class="mb-3">
					<label for="title" class="form-label">Occupations: <span class="text-danger">*</span></label>
					<input type="text" name="listing[occupations]" id="title" placeholder="Occupations" class="form-control" required>
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide a title.
					</div>
				</div>
				
				<div class="mb-3">
					<!-- <label for="description" class="form-label">Physical Appearance of a person: <span class="text-danger">*</span></label> -->
				
					<!-- Hidden default value -->
					<input type="hidden" name="listing[description]" id="description" value="Average height, medium build, black hair, brown eyes">
				
					<!-- Visible textarea removed to hide from webpage -->
				</div>
				
				<div class="mb-3">
					<label for="price" class="form-label">Contact Information: <span class="text-danger">*</span></label>
					<input type="text" name="listing[price]" id="price" placeholder="Contact" class="form-control" required>
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide a contact details.
					</div>
				</div>
				
				<div class="row mb-3">
					<div class="col-md-4">
						<!-- <label for="location" class="form-label">Last Seen Location:</label> -->
						<input type="hidden" name="listing[location]" id="location" value="45">
						<div class="valid-feedback">
							Looks good!
						</div>
						<div class="invalid-feedback">
							Please provide a location.
						</div>
					</div>
					<div class="col-md-8">
						<!-- <label for="country" class="form-label">Enter country:</label> -->
						<input type="hidden" name="listing[country]" id="country" value="India">
						<div class="valid-feedback">
							Looks good!
						</div>
						<div class="invalid-feedback">
							Please provide a country.
						</div>
					</div>
				</div>
	
				<div class="mb-3">
					<label for="image" class="form-label">Upload Image:</label>
					<input type="file" name="listing[image]" id="image" placeholder="https://" class="form-control">
					<div class="valid-feedback">
						Looks good!
					</div>
					<div class="invalid-feedback">
						Please provide an image URL.
					</div>
				</div>
				
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary mb-3 large-button">Register!</button>
				</div>
			</form>
		</div>
	</div>
	

	
	 

</body>
